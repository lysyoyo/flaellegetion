rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // ⚠️ ATTENTION : Ces règles permettent à TOUT LE MONDE de lire et écrire.
      // À utiliser uniquement pour le développement/test.
      // Pour la production, vous devrez restreindre l'accès (ex: if request.auth != null).
      allow read, write: if true;
    }
  }
}
